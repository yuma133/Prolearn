<div class="row signup">
<div class="col-xs-12">
<h2 class="field add-op">会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email, class: "add-op" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password, class: "add-op" %>
    <% if @minimum_password_length %>
    <em class="more">(<%= @minimum_password_length %> 文字以上必要です)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, class: "add-op" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions field">
    <%= f.submit "登録する", class: "btn btn-info" %>
  </div>
<% end %>
<%= render "devise/shared/links" %>
</div>
</div>